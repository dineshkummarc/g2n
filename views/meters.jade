extends layout

block content
  div.page-header
    h1.header #{building.name}: #{building.meters.length} Meters
  div.row
    table.table.table-striped
      thead
        tr
          th Name
          th Utility
          th Readings
      each meter in meters
        tr
          td= meter.name
          td= meter.utility
          td
            a.ajax-link(href="/charts/meter_readings?buildingId=#{building._id}&meterId=#{meter._id}") View